<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MonCompteScrollingActivity"
    tools:showIn="@layout/activity_mon_compte_scrolling">

    <LinearLayout
        android:id="@+id/profilLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAvatarSélection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sélectionnez votre avatar :" />

        <RadioGroup
            android:id="@+id/avatarRadioGroup"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewSelectionAvatar"
            app:layout_constraintStart_toStartOf="@+id/textViewSelectionAvatar"
            app:layout_constraintTop_toBottomOf="@+id/textViewSelectionAvatar">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/avatar1RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/chat" />

                    <RadioButton
                        android:id="@+id/avatar2RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/cochon" />

                    <RadioButton
                        android:id="@+id/avatar3RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/hamster" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/avatar4RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/panda_a" />

                    <RadioButton
                        android:id="@+id/avatar5RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/lion" />

                    <RadioButton
                        android:id="@+id/avatar6RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/singe" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/avatar7RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/hibou"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/avatar8RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/souris"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/avatar9RadioButton"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:button="@drawable/chien"
                        android:text="RadioButton" />
                </TableRow>

            </TableLayout>

        </RadioGroup>

        <EditText
            android:id="@+id/nomEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nom : " />

        <EditText
            android:id="@+id/prenomEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Prénom :" />

        <EditText
            android:id="@+id/pseudoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Pseudo : " />

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age de votre enfant :" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/monCompteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>